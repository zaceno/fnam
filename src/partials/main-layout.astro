---
import NavMenu from './nav-menu.astro'
const baseTitle = 'Fria och Antagna Murare i Sverige'
const {title} = Astro.props
---
<html lang="sv">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} â€“ ${baseTitle}` : baseTitle}</title>
    <style>
      * {
        box-sizing: border-box;
      }
      
      html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        overflow-x: hidden;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      }
      
      #root, main, .page-layout {
        width: 100%;
        max-width: 100%;
      }
    </style>
  </head>
  <body style="margin: 0; padding: 0; width: 100%; overflow-x: hidden;">
    <NavMenu />
    <slot />
  </body>
</html>