---
import {Image} from 'astro:assets'
import { getCollection } from 'astro:content'
import loadContentImage from '../utils/load-content-image'
const lodges = await getCollection('lodges')
lodges.sort((l, r) => (l.data.number - r.data.number))
---
<div class="lodges-grid">
  {lodges.map(lodge => (
  <a href={`${import.meta.env.BASE_URL}/loger/${lodge.id}`} class="lodge-card">
      <div class="lodge-logo">
        <Image src={loadContentImage(lodge.data.seal)} alt={lodge.data.name} />
      </div>
      <div class="lodge-info">
        <h3>{lodge.data.name}</h3>
        <p>Nr {lodge.data.number}</p>
      </div>
  </a>
  ))}
</div>

<style>
  .lodges-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 3rem;
    max-width: 1000px;
    margin: 0 auto;
  }
  
  .lodge-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease;
  }
  
  .lodge-card:hover {
    transform: translateY(-5px);
  }
  
  .lodge-logo {
    width: 160px;
    height: 160px;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .lodge-logo img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  
  .lodge-info {
    text-align: center;
  }
  
  .lodge-info h3 {
    color: #1a237e;
    font-size: 1.2rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
  }
  
  .lodge-info p {
    color: #666;
    font-size: 1rem;
    margin: 0;
  }
  
  @media (max-width: 768px) {
    .lodges-grid {
      grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
      gap: 1.5rem;
    }
    
    .lodge-logo {
      width: 130px;
      height: 130px;
    }
    
    .lodge-info h3 {
      font-size: 1.1rem;
    }
    
    .lodge-info p {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 480px) {
    .lodges-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
    
    .lodge-logo {
      width: 110px;
      height: 110px;
    }
    
    .lodge-info h3 {
      font-size: 1rem;
    }
    
    .lodge-info p {
      font-size: 0.8rem;
    }
  }
</style>