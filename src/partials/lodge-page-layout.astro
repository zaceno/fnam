---
import { Image } from "astro:assets";
import distriktsSigill from '../pages/_index_assets/Distriktsigill_frilagt-3.png'
import templetUmea from '../pages/_index_assets/Umea_tempel.png'
import loadContentImage from '../utils/load-content-image'

const { title, subtitle } = Astro.props
---

<div class="lodge-page-layout">
  <!-- Lodge Hero Section -->
  <section class="lodge-hero">
    <Image class="lodge-hero-background" src={templetUmea} alt="UmeÃ¥ tempel" />
    <div class="lodge-hero-content">
      <div class="lodge-hero-main">
        <Image class="lodge-hero-logo" src={distriktsSigill} alt="Distriktssigill" />
        <div class="lodge-hero-text">
          <h1>{title}</h1>
          {subtitle && <h2>{subtitle}</h2>}
        </div>
      </div>
    </div>
  </section>

  <!-- Lodge Main Content -->
  <main class="lodge-main">
    <div class="lodge-container">
      <div class="lodge-content">
        <slot />
      </div>
    </div>
  </main>
</div>

<style>
  .lodge-page-layout {
    min-height: 100vh;
  }

  /* Lodge Hero Section */
  .lodge-hero {
    position: relative;
    width: 100%;
    height: 50vh;
    min-height: 400px;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }

  .lodge-hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .lodge-hero-content {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 3rem;
    max-width: 1200px;
    padding: 0 2rem;
  }

  .lodge-hero-main {
    display: flex;
    align-items: center;
    gap: 2rem;
    color: white;
  }

  .lodge-hero-logo {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
    background: #fff;
    padding: 1rem;
    object-fit: contain;
    flex-shrink: 0;
  }

  .lodge-hero-text h1 {
    font-size: 2.5rem;
    font-weight: bold;
    margin: 0;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
  }

  .lodge-hero-text h2 {
    font-size: 1.5rem;
    font-weight: 300;
    margin: 0.5rem 0 0 0;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
  }


  /* Lodge Main Content */
  .lodge-main {
    background: #f8fafc;
    min-height: 50vh;
  }

  .lodge-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  .lodge-content {
    background: white;
    border-radius: 1rem;
    padding: 3rem;
    box-shadow: 0 2px 16px rgba(0, 0, 0, 0.1);
    line-height: 1.8;
  }

  .lodge-content h1,
  .lodge-content h2,
  .lodge-content h3,
  .lodge-content h4 {
    color: #1a237e;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .lodge-content h1 {
    font-size: 2rem;
    border-bottom: 2px solid #e3eaf3;
    padding-bottom: 0.5rem;
  }

  .lodge-content h2 {
    font-size: 1.5rem;
  }

  .lodge-content h3 {
    font-size: 1.25rem;
  }

  .lodge-content p {
    margin-bottom: 1.5rem;
    color: #333;
  }

  .lodge-content ul,
  .lodge-content ol {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .lodge-content li {
    margin-bottom: 0.5rem;
  }

  .lodge-content blockquote {
    border-left: 4px solid #1a237e;
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: #666;
  }

  .lodge-content a {
    color: #1a237e;
    text-decoration: none;
    font-weight: 500;
  }

  .lodge-content a:hover {
    color: #3949ab;
    text-decoration: underline;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .lodge-hero {
      height: 40vh;
      min-height: 250px;
    }

    .lodge-hero-content {
      flex-direction: column;
      gap: 1.5rem;
      text-align: center;
      padding: 0 1rem;
    }

    .lodge-hero-main {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    .lodge-hero-logo {
      width: 160px;
      height: 160px;
    }


    .lodge-hero-text h1 {
      font-size: 1.8rem;
      line-height: 1.2;
    }

    .lodge-hero-text h2 {
      font-size: 1.2rem;
    }

    .lodge-container {
      padding: 2rem 1rem;
    }

    .lodge-content {
      padding: 2rem 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .lodge-hero {
      height: 35vh;
      min-height: 200px;
    }

    .lodge-hero-content {
      gap: 1rem;
      padding: 0 0.5rem;
    }

    .lodge-hero-main {
      gap: 0.5rem;
    }

    .lodge-hero-logo {
      width: 120px;
      height: 120px;
    }


    .lodge-hero-text h1 {
      font-size: 1.5rem;
    }

    .lodge-hero-text h2 {
      font-size: 1rem;
    }

    .lodge-container {
      padding: 1.5rem 0.5rem;
    }

    .lodge-content {
      padding: 1.5rem 1rem;
    }

    .lodge-content h1 {
      font-size: 1.5rem;
    }

    .lodge-content h2 {
      font-size: 1.25rem;
    }

    .lodge-content h3 {
      font-size: 1.1rem;
    }
  }
</style>
