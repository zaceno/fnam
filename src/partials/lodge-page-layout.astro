---
import { Image } from "astro:assets";
import distriktsSigill from '../pages/_index_assets/Distriktsigill_frilagt-3.png'
import templetUmea from '../pages/_index_assets/Umea_tempel.png'
import loadContentImage from '../utils/load-content-image'

const { title, subtitle, lodgeSeal } = Astro.props
---

<div class="lodge-page-layout">
  <!-- Lodge Main Content -->
  <main class="lodge-main">
    <div class="lodge-container">
      <div class="lodge-content">
        <div class="lodge-main">
          <slot />
        </div>
        
        <aside class="lodge-sidebar">
          <!-- Lodge Sigil Section -->
          <div class="lodge-sigil-section">
            {lodgeSeal && (
              <Image 
                src={loadContentImage(lodgeSeal)} 
                alt={`Logen ${title} sigill`} 
                class="lodge-seal-small" 
              />
            )}
          </div>
          
          <slot name="sidebar" />
        </aside>
      </div>
    </div>
  </main>
</div>

<style>
  .lodge-page-layout {
    min-height: 100vh;
  }

  /* Lodge Sigil Section */
  .lodge-sigil-section {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: transparent;
    border-radius: 0;
    box-shadow: none;
    margin-top: 1.5rem;
  }

  .lodge-seal-small {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    box-shadow: none;
    background: transparent;
    padding: 0;
    object-fit: contain;
    flex-shrink: 0;
  }


  /* Lodge Main Content */
  .lodge-main {
    background: #f8fafc;
    min-height: 50vh;
  }

  .lodge-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
  }

  .lodge-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
    margin-top: 0;
    align-items: start;
  }

  .lodge-main {
    min-width: 0;
    background: white;
    border-radius: 1rem;
    padding: 3rem;
    box-shadow: 0 2px 16px rgba(0, 0, 0, 0.1);
    line-height: 1.8;
  }

  .lodge-sidebar {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .lodge-content h1,
  .lodge-content h2,
  .lodge-content h3,
  .lodge-content h4 {
    color: #1a237e;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .lodge-content h1 {
    font-size: 2rem;
    border-bottom: 2px solid #e3eaf3;
    padding-bottom: 0.5rem;
  }

  .lodge-content h2 {
    font-size: 1.5rem;
  }

  .lodge-content h3 {
    font-size: 1.25rem;
  }

  .lodge-content p {
    margin-bottom: 1.5rem;
    color: #333;
  }

  .lodge-content ul,
  .lodge-content ol {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .lodge-content li {
    margin-bottom: 0.5rem;
  }

  .lodge-content blockquote {
    border-left: 4px solid #1a237e;
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: #666;
  }

  .lodge-content a {
    color: #1a237e;
    text-decoration: none;
    font-weight: 500;
  }

  .lodge-content a:hover {
    color: #3949ab;
    text-decoration: underline;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .lodge-container {
      padding: 1rem 1rem;
    }

    .lodge-content {
      grid-template-columns: 1fr;
      gap: 2rem;
      display: flex;
      flex-direction: column;
    }

    /* Reorder: sigil appears before text on mobile */
    .lodge-sidebar {
      order: -1;
    }

    .lodge-content > .lodge-main {
      padding: 2rem 1.5rem;
      order: 1;
    }

    .lodge-sigil-section {
      margin-top: 0;
      margin-bottom: 1.5rem;
      padding: 1rem;
    }

    .lodge-seal-small {
      width: 150px;
      height: 150px;
    }
  }

  @media (max-width: 480px) {
    .lodge-container {
      padding: 1rem 1rem;
    }

    .lodge-content > .lodge-main {
      padding: 1.5rem 1rem;
    }

    .lodge-sigil-section {
      padding: 0.75rem;
      margin-bottom: 1rem;
    }

    .lodge-seal-small {
      width: 120px;
      height: 120px;
    }

    .lodge-content h1 {
      font-size: 1.5rem;
    }

    .lodge-content h2 {
      font-size: 1.25rem;
    }

    .lodge-content h3 {
      font-size: 1.1rem;
    }
  }
</style>
